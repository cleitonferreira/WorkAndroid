<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nuvemapp.com.br.exemplobroadcastreceiver">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Atividade1"></activity>


        <receiver
            android:name=".BroadcastReceiver1"
            android:label="BroadcastReceiver1">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="BROADCAST_RECEIVER_XML" />
            </intent-filter>
        </receiver>


        <receiver
            android:name=".BroadcastReceiver3"
            android:label="BroadcastReceiver3">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="BROADCAST_RECEIVER_START_ACTIVITY" />
            </intent-filter>
        </receiver>


    </application>

</manifest>
