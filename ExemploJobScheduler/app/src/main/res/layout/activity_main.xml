<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nuvemapp.com.br.exemplojobscheduler.MainActivity"
    android:id="@+id/linearLayout"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_app" />

    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#888"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <Button
        android:text="@string/bt_job_scheduler_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onJobExecute" />

    <Button
        android:text="@string/bt_job_scheduler_label_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onCancelAll" />

    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#888"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/tv_job_scheduler_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

</LinearLayout>
