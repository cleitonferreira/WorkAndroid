        android:layout_height="1dp" />

    <Button
        android:id="@+id/btDataFragmentBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toast com dados do FragmentBottom" />

</LinearLayout>
