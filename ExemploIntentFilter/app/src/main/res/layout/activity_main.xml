<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Tela Principal" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disparar ACAO_TELA"
        android:id="@+id/btn1"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:onClick="dispararAcaoTela"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disparar ACAO_TELA e CATEGORIA_TELA"
        android:id="@+id/btn2"
        android:layout_below="@+id/btn1"
        android:layout_alignEnd="@+id/btn1"
        android:onClick="dispararAcaoTelaCategoriaTela"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir navegador"
        android:id="@+id/btn3"
        android:layout_below="@+id/btn2"
        android:layout_alignParentStart="true"
        android:onClick="abrirNavegador"/>
</RelativeLayout>
